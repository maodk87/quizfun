<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="quizfun.model.entity.Answer" table="ANSWER">
		<id name="id" type="long">
			<column name="ID" />
			<generator class="native"></generator>
		</id>
		<version column="VERSION" name="version" type="long" />
		<property name="answer" type="string" not-null="true">
			<column name="ANSWER" length="255" />
		</property>
		<property name="correct" type="boolean" not-null="true">
			<column name="CORRECT" />
		</property>
		<many-to-one name="question" column="QUESTION" not-null="true" fetch="join" lazy="false"></many-to-one>
	</class>
</hibernate-mapping>
