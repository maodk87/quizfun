<jsp:root version="1.2" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html" xmlns:ice="http://www.icesoft.com/icefaces/component"
	xmlns:ui="http://java.sun.com/jsf/facelets">

	<ice:form id="frmCourse">
		<ice:panelCollapsible id="pncCourse" expanded="true">
			<f:facet name="header">
				<ice:panelGroup>
					<ice:outputText value="#{res['module.course.panel.title']}" />
				</ice:panelGroup>
			</f:facet>

			<ui:decorate template="/WEB-INF/include/course/inc-selectcourse.jspx">
				<ui:param name="managedBean" value="#{modifyModule}" />
			</ui:decorate>
		</ice:panelCollapsible>
	</ice:form>

	<ice:form id="frmModule">
		<ice:panelCollapsible id="pncModule" expanded="true" toggleOnClick="false">
			<f:facet name="header">
				<ice:panelGroup>
					<ice:outputText value="#{res['module.modify.panel.title']}" />
				</ice:panelGroup>
			</f:facet>

			<ui:decorate template="/WEB-INF/include/module/inc-module.jspx">

				<ui:param name="required" value="#{true}" />
				<ui:param name="editMode" value="#{true}" />
				<ui:param name="managedBean" value="#{modifyModule}" />
				<ui:define name="commandsPanel">
					<ice:panelGroup>
						<ice:commandButton value="#{res['common.label.save']}" actionListener="#{modifyModule.saveActionListener}"/>
						<ice:commandButton value="#{res['common.label.reset']}"  actionListener="#{modifyModule.resetActionListener}" immediate="true" />
					</ice:panelGroup>
				</ui:define>

			</ui:decorate>
		</ice:panelCollapsible>
	</ice:form>
</jsp:root>